{
  "id": "example-mod",
  "name": "Example Mod",
  "description": "A sample mod that demonstrates CodysTools functionality",
  "version": "1.0.0",
  "author": "CodysTools",
  "category": "Utility",
  "targetSites": ["*"],
  "permissions": ["storage"],
  "settings": [
    {
      "key": "enableFeature",
      "type": "boolean",
      "label": "Enable main feature",
      "description": "Toggle the main functionality of this mod",
      "default": true
    },
    {
      "key": "customText",
      "type": "text",
      "label": "Custom text",
      "description": "Enter custom text to display",
      "default": "Hello from CodysTools!"
    },
    {
      "key": "animationSpeed",
      "type": "number",
      "label": "Animation speed (ms)",
      "description": "Speed of animations in milliseconds",
      "default": 300,
      "min": 100,
      "max": 2000
    },
    {
      "key": "theme",
      "type": "select",
      "label": "Theme",
      "description": "Choose the visual theme",
      "default": "light",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" },
        { "value": "auto", "label": "Auto" }
      ]
    }
  ],
  "files": {
    "css": "style.css",
    "js": "script.js"
  }
}
